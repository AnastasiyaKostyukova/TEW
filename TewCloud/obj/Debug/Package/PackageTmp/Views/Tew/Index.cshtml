
@{
    ViewBag.Title = "TEW";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row center-block main-text">
    <div class="jumbotron header-with-image" id="indexHeader">
        <div class="title-text big-size-text">Trainer of english words</div>
        <h2 class="title-text">Improve your english now!</h2>
    </div>

    <div id="statContainer" class="row">
        
        <div class="stat-block">
		
				<img src="~/Content/Images/words.png" class="icons" />
				<span id="wordsCount" style="margin-right: 50px; color: black"></span>
		
                <img src="~/Content/Images/users.png" class="icons"/>
                <span id="userCount" style="margin-right: 50px; color: black"></span>
           
        </div>

        <div id="downdLoadBlock">
            <img src="~/Content/Images/downloadButton.jpg" class="download-icon" id="downloadButton"/>
        </div>

		<div id="irregularVerbsBlock">
			<img src="~/Content/Images/irregularVerbs.png" class="download-icon" id="irregularVerbsButton" />
		</div>

    </div>

    <div id="loadingContainer" style="text-align: center" class="display-none">
        <img src="~/Content/Images/ajax-loader.gif" />
    </div>
</div>

